.container {
  height: 100%;
  overflow: hidden;
}

.user_box {
  background: #333;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user_box .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.user_box .username {
  margin-top: 30rpx;
  font-size: 14px;
  color: #fff;
}

.order {
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order .head {
  height: 108rpx;
  padding-left: 30rpx;
  padding-right: 20rpx;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  align-items: center;
}

.order .head .label {
  flex: 1;
}

.order .head .icon {
  width: 44rpx;
  height: 44rpx;
}

.order .items {
  height: 168rpx;
  display: flex;
}

.order .items .item {
  width: 25%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.order .items .icon {
  width: 72rpx;
  height: 72rpx;
}

.order .items .label {
  font-size: 12px;
  color: #666;
}

.order .items .count {
  position: absolute;
  top: 20rpx;
  display: block;
  right: 40rpx;
  font-size: 12px;
  min-width: 16px;
  height: 16px;
  text-align: center;
  line-height: 14px;
  border-radius: 8px;
  border: 1px solid #d81e06;
  color: #d81e06;
}
